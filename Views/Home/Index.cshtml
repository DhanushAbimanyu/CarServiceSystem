                @Html.DisplayFor(modelItem => item.ServiceDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReturnDate)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditCar", new { id = item.Id }) |
                @Html.ActionLink("Details", "CarDetails", new { id = item.Id }) |
